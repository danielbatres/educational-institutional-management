@inject NavigationManager NavigationManager

<ul class="@HideOnMobile" style="@Styles">
  <li>
    <p @onclick="@(() => NavigationManager.NavigateTo("/"))">Homepage</p>
  </li>
  <li>
    <p @onclick="@NavigateTo">
      Beneficios
      <i class="fi fi-tr-angle-small-down"></i>
    </p>
  </li>
  <li>
    <a href="#pricing">
      Planes de servicio
      <i class="fi fi-tr-angle-small-down"></i>
    </a>
  </li>
  <li>
    <p @onclick="@(() => NavigationManager.NavigateTo("/about-us"))">Sobre nosotros</p>
  </li>
</ul>


@code {
  [Parameter]
  public string HideOnMobile { get; set; } = "";
  [Parameter]
  public string Styles { get; set; } = "flex-direction: row;";

  private void NavigateTo() {
    NavigationManager.NavigateTo("/#benefits");
  }
}