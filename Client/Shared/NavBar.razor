@inject NavigationManager NavigationManager

<div class="navbar-container">
  <div class="navbar-content">
    <div>
      <p class="logo" @onclick="@(() => NavigationManager.NavigateTo("/"))">Dicamy</p>
    </div>
    <div class="navigation">
      <ul>
        <li>
          <p @onclick="@(() => NavigationManager.NavigateTo("/"))">Inicio</p>
        </li>
        <li>
          <p>Informaci&oacute;n</p>
        </li>
        <li>
          <p>Planes</p>
        </li>
      </ul>
      @if (!HideButtons) {
        <div class="buttons">
          <button type="button" class="transparent-button" @onclick="@(() => NavigationManager.NavigateTo("/login"))">
            Iniciar sesi&oacute;n
          </button>
          <button type="button" class="primary-background-button" @onclick="@(() => NavigationManager.NavigateTo("/register"))">
            Registrarse
          </button>
        </div>
      }
    </div>
  </div>
</div>

@code {
  [Parameter]
  [EditorRequired]
  public bool HideButtons { get; set; } = false;
}