<SettingsModule>
  <div class="roles-container">
    <div class="box-background">
      <div class="role-name">
        <button type="button" class="gray-button" @onclick="@GoBackRoles">
          <i class="fi fi-tr-arrow-small-left"></i>
        </button>
        <h4>@Roles.FirstOrDefault(r => r.Id.Equals(_roleContext.ActualRoleIdSelection))?.Name</h4>
      </div>
      <p>Edita la informaci&oacute;n sobre este rol </p>
      <ul class="navigation-bar-options">
        <li class="@(NavBarOptionSelection == 0 ? "selected-navigation" : "")" @onclick="@(() => SetNavBarOptionSelection(0))">
          <p>General</p>  
        </li>
        <li class="@(NavBarOptionSelection == 1 ? "selected-navigation" : "")" @onclick="@(() => SetNavBarOptionSelection(1))">
          <p>Permisos</p>  
        </li>
        <li class="@(NavBarOptionSelection == 2 ? "selected-navigation" : "")" @onclick="@(() => SetNavBarOptionSelection(2))">
          <p>Miembros</p>  
        </li>
      </ul>

      @if (false) {
        <ul class="nav-options">
          <li class="@(NavBarOptionSelection == 0 ? "nav-selection-option" : "")"
            @onclick="@(() => SetNavBarOptionSelection(0))">
            <p>Administrar usuarios</p>
          </li>
          <li class="@(NavBarOptionSelection == 1 ? "nav-selection-option" : "")"
            @onclick="@(() => SetNavBarOptionSelection(1))">
            <p>
              Buscar usuarios
            </p>
          </li>
        </ul>
      }
    </div>
    <div>
      @switch (MenuSelection){
        case "general":
          <GeneralRole />
          break;
        case "permissions":
          <PermissionRole Roles="@Roles" />
          break;
        case "members":
          <RoleMembers />
          break;
      }
    </div>
  </div>
</SettingsModule>
